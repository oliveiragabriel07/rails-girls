<div class="row">

  <div class="col-md-8">
    <%= image_tag(@idea.picture_url, :width => '100%') if @idea.picture.present? %>

    <!-- <div class="actions">
        <% if can? :modify, @idea %>
          <%= link_to 'Edit', edit_idea_path(@idea) %> |
          <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete %> |
        <% end %>
        <%= link_to 'Back', ideas_path %>
      </div>
    </div> -->

    <div class="btn-group actions" role="group">
      <% if can? :modify, @idea %>
        <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-default" %>
        <%= link_to 'Destroy', edit_idea_path(@idea), class: "btn btn-default" %>
      <% end %> 
      <%= link_to 'Back', edit_idea_path(@idea), class: "btn btn-default" %>
    </div>
  </div>

  <div class="col-md-4 idea-details">

    <div class="idea-main-details">
      <h1><%= @idea.name %></h1>

      <p>
        <%= @idea.description %>
      </p>

      <p><%= render 'likes/like_link', likeable: @idea %></p>
    </div>

    <div id="comment-box">
      <%= render @comments, idea: @idea %>

      <%= render 'comments/form', idea: @idea %>
    </div>

  </div>
</div>



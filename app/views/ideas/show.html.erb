<div class="row">

  <h1 class="col-md-12"><%= @idea.name %></h1>

  <div class="col-md-9">
    <%= image_tag(@idea.picture_url, :width => '100%') if @idea.picture.present? %>
  </div>

  <div class="col-md-3">
    <p>
      <%= @idea.description %>
    </p>
    <%= render 'likes/like_button', likeable: @idea %>
    <br>
    <br>

    <h3>Comments</h3>
    <div id="comment-box">
      <%= render @comments, idea: @idea %>
    </div>

    <%= render 'comments/form', idea: @idea %>

    <div class="actions">
      <% if can? :modify, @idea %>
        <%= link_to 'Edit', edit_idea_path(@idea) %> |
        <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <% end %>
      <%= link_to 'Back', ideas_path %>
    </div>

  </div>
</div>

<%= button_to '+ New Idea', new_idea_path, class: 'btn btn-primary btn-new-idea' %>
<h1>Ideas</h1>

<div class="clear"></div>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail idea-thumbnail">
          <div class="img-wrapper">
            <%= image_tag idea.picture_url if idea.picture? %>
          </div>
          <div class="caption">
            <h3><%= link_to idea.name, idea %></h3>
            <p><%= idea.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
